<div class="small-container center-block">
  <h2>Iniciar sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="field">
      <%= f.label :email, "Correo electrónico" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "Contraseña" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recordarme" %>
      </div>
    <% end %>

    <div class="field">
      <%= flash[:recaptcha_error] %>
      <%= recaptcha_tags(site_key: ENV['6LeCxDsmAAAAAO0ktwHQOrMKOCwOQhxOLFdY48Se']) %>
    </div>

    <div class="actions">
      <%= f.submit "Ingresar", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
